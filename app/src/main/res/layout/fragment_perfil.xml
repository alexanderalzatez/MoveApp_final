<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".PerfilFragment"
              android:orientation="vertical">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/Usuario_Name"
              android:gravity="center"
              android:paddingTop="50dp"
              android:textSize="20dp"
              android:textStyle="bold"/>

    <ImageView
            android:layout_width="170dp"
            android:layout_height="101dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/girl"
            android:layout_gravity="center"
            android:id="@+id/imageView"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="40dp"
                  android:layout_marginLeft="16dp"
                  android:layout_marginBottom="8dp"
                  android:layout_marginRight="30dp">

        <ImageView android:layout_width="0dp"
                   android:layout_height="41dp"
                   android:layout_weight="1"
                   android:scaleType="centerInside"
                   android:src="@drawable/usuario"/>

        <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1.5"
                  android:id="@+id/tvUsername"
                  android:layout_gravity="center"
                  android:text="@string/Usuario_Name"
                  android:fontFamily="sans-serif"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="16dp"
                  android:layout_marginBottom="8dp"
                  android:layout_marginRight="30dp">

        <ImageView android:layout_width="0dp"
                   android:layout_height="41dp"
                   android:layout_weight="1"
                   android:scaleType="centerInside"
                   android:src="@drawable/email"/>

        <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1.5"
                  android:id="@+id/tvUseremail"
                  android:text="@string/Correo"
                  android:fontFamily="sans-serif"
                  android:layout_gravity="center"
                  />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="16dp"
                  android:layout_marginBottom="8dp"
                  android:layout_marginRight="30dp">

        <ImageView android:layout_width="0dp"
                   android:layout_height="41dp"
                   android:layout_weight="1"
                   android:scaleType="centerInside"
                   android:src="@drawable/cities"
        />
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:id="@+id/tvUserCity"
                android:text="@string/Ciudad"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
        />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:paddingTop="40dp">

        <Button android:layout_width="150dp"
                android:layout_height="75dp"
                android:id="@+id/bnEditar"
                android:background="@drawable/button_animation"
                android:layout_marginBottom="8dp"
                android:textColor="@color/color_azulOscuro"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:text="@string/Editar">

        </Button>

    </LinearLayout>
</LinearLayout>